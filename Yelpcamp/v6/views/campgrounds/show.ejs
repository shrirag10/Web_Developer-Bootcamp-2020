
<%- include ('../partials/header1'); %>




 <!-- Jumbotron  -->
 <header  >
    
        <div class="container">
            <div class="row">
              <div class="col-md-3">
                <p class="lead"><strong>Yelp\_/Camp</strong> </p>
                <div class="list-group">
                  <li class="list-group-item active">Info 1</li>
                  <li class="list-group-item">Info 2</li>
                  <li class="list-group-item">Info 3</li>
                </div>
              </div>
              <div class="col-md-9">
                
                <img class=" card card-img-top img-thumbnail img-fluid " src="<%=campground.image%>" alt="Card image cap"> 
                <div class="caption">
                  <h4 class="pull-right"> Rs.700/Night </h4>
                  <h4><a href=""><h4><%=campground.name %></h4></a></h4>
                  <p><%=campground.description %></p>
                </div>
               
                <div class="well">
                    <div class="text-right">
                      <a class="btn btn-success btn-lg" href="/campgrounds/<%=campground._id %>/comments/new">Leave a comment</a>  
                    </div>
                    <hr>
                    <div>
                    <% campground.comments.forEach(function(comment){ %>
                      <div class="row">
                          <div class="col-md-12">
                            <strong><%=comment.author %></strong>
                            <span class="pull-right">10 days ago </span>
                            <p>
                              <%= comment.text %>
                            </p> 
                            <% }) %>
                            <p class="text-center"><a class="btn btn-primary btn-lg" href="/campgrounds">Back</a> </p>  
                          </div>
                        
                      </div>
                  </div>
            
                                          
                                                 
                  
                </div>
              </div>
            </div>
                                            
                    
            
        
                  
        </div>
                                     
          
</header>
 


