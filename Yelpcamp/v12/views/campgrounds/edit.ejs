
<%- include ('../partials/header1'); %>



<div class="container">
    <div class="row">
     
        <div style="width: 30%; margin: 40px auto;">
            <h1  class="text-inline" style="text-align: center; ">Edit <%= campground.name%> </h1>
            <!-- Form content -->
            <form action="/campgrounds/<%=campground._id %>?_method=PUT" method="POST">    
                <div class="form-group " style="margin-top: 20px;">
                    <input  type="text" name="campground[name]" value="<%=campground.name%>" class="form-control ">
                </div>
                <div class="form-group">
                    <input type="text" name="campground[image]" value="<%=campground.image%>" class="form-control">
                </div>
                <div class="form-group">
                    <input type="number" name="campground[price]" value="<%=campground.price%>" class="form-control" min="1" step="10">
                </div>
                <div class="form-group">
                  <input type="text" name="campground[description]" value="<%=campground.description%>" class="form-control">
              </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">Submit!!!</button>
                </div>
                                             
            </form>
           <p class="text-center"><a class="btn btn-dark btn-lg " href="/campgrounds">Back</a></p> 
        </div>
    </div>
</div>
<%- include ('../partials/footer'); %>