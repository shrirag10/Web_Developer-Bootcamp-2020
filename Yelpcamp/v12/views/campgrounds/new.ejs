
<%- include ('../partials/header1'); %>



<div class="container">
    <div class="row">
     
        <div style="width: 30%; margin: 40px auto;">
            <h1  class="text-inline" style="text-align: center; ">Create a new Campground</h1>
            <!-- Form content -->
            <form action="/campgrounds" method="POST">    
                <div class="form-group " style="margin-top: 20px;">
                    <input  type="text" name="name" placeholder=" Campground name" class="form-control ">
                </div>
                <div class="form-group">
                    <input type="text" name="image" placeholder="Image url" class="form-control">
                </div>
                <div class="form-group">
                    <input type="number" name="price" placeholder="Price per Night" class="form-control" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                  <input type="text" name="description" placeholder="Description" class="form-control">
              </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">Submit!!!</button>
                </div>
                                             
            </form>
           <p class="text-center"><a class="btn btn-dark btn-lg " href="/campgrounds">Back</a></p> 
        </div>
    </div>
</div>
<%- include ('../partials/footer'); %>