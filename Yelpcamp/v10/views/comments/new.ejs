<!-- Content  -->
<div class="container">
    <div class="row">
     
        <div style="width: 30%; margin: 40px auto;">
            <h1  class="text-inline" style="text-align: center; ">Add New Comment to <%= campground.name %> </h1>
            <!-- Form content -->
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">    
                <div class="form-group " style="margin-top: 20px;">
                    <input  type="text" name="comment[text]" placeholder=" Comment" class="form-control ">
                </div>
                              
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">Submit!!!</button>
                </div>
                                             
            </form>
           <p class="text-center"><a class="btn btn-dark btn-lg " href="/campgrounds">Back</a></p> 
        </div>
    </div>
</div>


